<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/background"
                android:background="@drawable/default_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout android:id="@+id/navigation"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="#eeeff1"
                  android:layout_alignParentBottom="true"
                  android:baselineAligned="false"
                  android:orientation="horizontal">

        <RelativeLayout android:id="@+id/tab1"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
            <ImageView android:id="@+id/tab1image"
                       style="@style/tab_img_style"
                       android:src="@drawable/tab_recommend_normal"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
            <TextView android:id="@+id/tab1text"
                      android:text="推荐导航"
                      android:layout_below="@id/tab1image"
                      style="@style/tab_text_style"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout android:id="@+id/tab2"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
            <ImageView android:id="@+id/tab2image"
                       style="@style/tab_img_style"
                       android:src="@drawable/tab_mine_normal"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
            <TextView android:id="@+id/tab2text"
                      android:text="我的导航"
                      android:layout_below="@id/tab2image"
                      style="@style/tab_text_style"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout android:id="@+id/tab3"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
            <ImageView android:id="@+id/tab3image"
                       style="@style/tab_img_style"
                       android:src="@drawable/tab_skin_normal"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
            <TextView android:id="@+id/tab3text"
                      android:text="皮肤管理"
                      android:layout_below="@id/tab3image"
                      style="@style/tab_text_style"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
            android:layout_above="@id/navigation"
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    </FrameLayout>

</RelativeLayout>

